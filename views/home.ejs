<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard | URLSHORT</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
      background: #020617;
      color: #fff;
    }
    header {
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #1e293b;
    }
    .logout {
      background: #ef4444;
      color: #000;
      border: none;
      padding: 8px 14px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }
    .container {
      max-width: 900px;
      margin: 30px auto;
      padding: 20px;
    }
    form {
      display: flex;
      gap: 10px;
      margin-bottom: 25px;
    }
    input {
      flex: 1;
      padding: 12px;
      border-radius: 8px;
      border: none;
    }
    button {
      padding: 12px 18px;
      border-radius: 8px;
      border: none;
      font-weight: bold;
      background: #38bdf8;
      cursor: pointer;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 12px;
      border-bottom: 1px solid #1e293b;
    }
    a {
      color: #38bdf8;
      text-decoration: none;
    }
  </style>
</head>
<body>

<header>
  <div>URLSHORT Dashboard</div>
  <!-- LOGOUT BUTTON -->
  <form method="GET" action="/user/logout">
    <button class="logout">Logout</button>
  </form>
</header>

<div class="container">
  <form method="POST" action="/url">
    <input type="url" name="url" placeholder="https://example.com" required />
    <button type="submit">Shorten</button>
  </form>

  <% if (urls && urls.length > 0) { %>
    <table>
      <tr>
        <th>#</th>
        <th>Short URL</th>
        <th>Original URL</th>
        <th>Clicks</th>
      </tr>
      <% urls.forEach((u, i) => { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><a href="/<%= u.shortid %>" target="_blank"><%= u.shortid %></a></td>
          <td><%= u.redirectURL %></td>
          <td><%= u.visitHistory.length %></td>
        </tr>
      <% }) %>
    </table>
  <% } else { %>
    <p>No URLs created yet.</p>
  <% } %>
</div>

</body>
</html>
